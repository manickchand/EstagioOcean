<?xml version="1.0" encoding="utf-8"?>

<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/containerItem"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="2dp"
    android:layout_marginTop="2dp"
    android:layout_marginLeft="4dp"
    android:layout_marginRight="4dp"
    android:foreground="?android:attr/selectableItemBackground"
    app:cardElevation="2dp"
    app:cardUseCompatPadding="false"
    app:cardCornerRadius="0dp"
    app:cardPreventCornerOverlap="false"
    app:cardMaxElevation="2dp">


<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:padding="5dp">

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:id="@+id/iv_fotoParente"
        android:layout_alignParentTop="true"
        android:layout_marginRight="10dp"
        android:src="@drawable/ic_face_black_48dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nome do Parente"
        android:id="@+id/tvNomeParente"
        android:layout_alignTop="@+id/iv_fotoParente"
        android:layout_toRightOf="@+id/iv_fotoParente"
        android:layout_toEndOf="@+id/iv_fotoParente"
        android:textSize="24sp"
        android:textColor="@color/colorPrimaryDark"
        android:layout_marginTop="@dimen/d_margin"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Parentesco"
        android:id="@+id/tvParentesco"
        android:layout_below="@id/tvNomeParente"
        android:layout_toRightOf="@+id/iv_fotoParente"
        android:layout_toEndOf="@+id/iv_fotoParente"
        android:textSize="@dimen/parente_dim"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Nascimento"
        android:id="@+id/tvNascimentoParente"
       android:layout_below="@id/tvParentesco"
        android:layout_toRightOf="@+id/iv_fotoParente"
        android:layout_toEndOf="@+id/iv_fotoParente"
        android:textSize="@dimen/nascimento_dim"/>

</RelativeLayout>
</android.support.v7.widget.CardView>
