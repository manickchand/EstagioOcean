<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/containerAdicionar"
    android:padding="@dimen/activity_vertical_margin"
    tools:context="com.example.manickchand.familiar.AdicionarFamiliar">

<RelativeLayout
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Toque para adicionar uma foto"
        android:id="@+id/tv_tFoto"
        android:gravity="center_horizontal"
        android:layout_marginTop="5dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentTop="true"/>

    <ImageView
        android:layout_width="150dp"
        android:layout_height="150dp"
        android:id="@+id/iv_addFamiliar"
        android:layout_alignParentTop="true"
        android:layout_below="@id/tv_tFoto"
        android:layout_centerHorizontal="true"
        android:layout_margin="10dp"
        android:layout_marginTop="20dp"
        android:src="@drawable/ic_face_black_48dp" />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:hint="Nome"
        android:ems="10"
        android:id="@+id/et_nomeAddFamiliar"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/iv_addFamiliar"
        android:layout_marginTop="20dp"/>

    <Spinner
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/spinnerParentesco"
        android:layout_below="@+id/et_nomeAddFamiliar"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:padding="@dimen/d_margin"
        android:background="@color/colorAccent"
        />

    <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:inputType="phone"
        android:hint="Telefone"
        android:ems="10"
        android:id="@+id/et_telefoneAddFamiliar"
        android:layout_centerHorizontal="true"
        android:layout_below="@+id/spinnerParentesco"
        android:layout_marginTop="20dp"
        />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="24sp"
        android:textColor="@color/colorPrimaryDark"
        android:id="@+id/tv_nascimentoAddFamiliar"
        android:layout_below="@+id/et_telefoneAddFamiliar"
        android:text="Data de nascimento"
        android:layout_marginTop="20dp"
         />

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Salvar"
        android:id="@+id/bt_Salvar"
        android:layout_below="@+id/tv_nascimentoAddFamiliar"
        android:background="@color/colorAccent"
        android:textColor="@color/white"
        android:layout_marginTop="20dp"/>


</RelativeLayout>
</ScrollView>

