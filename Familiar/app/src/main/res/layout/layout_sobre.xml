<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="180dp"
        android:layout_height="180dp"
        android:id="@+id/imageView"
        android:src="@drawable/ic_logo"
        android:layout_centerHorizontal="true"
        android:layout_margin="16dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Este Aplicativo foi desenvolvido por Leon Manickchand Junior para o processo de seleção da vaga de estágio Android do Ocean Manaus."
        android:id="@+id/textView"
        android:layout_below="@+id/imageView"
        android:layout_centerHorizontal="true"
        android:layout_margin="16dp"
        android:textColor="@color/grey"
        android:textSize="@dimen/nascimento_dim"
        android:gravity="center"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="lmj@icomp.ufam.edu.br"
        android:id="@+id/textView2"
        android:layout_below="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_margin="16dp"
        android:textColor="@color/colorAccent"
        android:textSize="26sp"
        android:gravity="center"/>

    <Button
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="OK"
        android:id="@+id/button"
        android:textColor="@color/colorPrimaryDark"
        android:background="@color/white"
        android:textSize="18sp"
        android:layout_below="@+id/textView2" />

</RelativeLayout>
